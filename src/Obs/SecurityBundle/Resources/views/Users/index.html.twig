<header>
    <h3>Users list</h3>
</header>

<table class="records_list" border="1">
    <thead>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Email</th>
            <th>Isactive</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('users_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.username }}</td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.isActive }}</td>
            <td>
            <ul>
                <li>
                    <a href="{{ path('users_show', { 'id': entity.id }) }}">show</a>
                </li>
                <li>
                    <a href="{{ path('users_edit', { 'id': entity.id }) }}">edit</a>
                </li>
            </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('users_new') }}">
            Create a new entry
        </a>
    </li>
</ul>