{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Publication</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ entity.year|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ entity.volume }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ entity.number }}</td>
            </tr>
            <tr>
                <th>Pages</th>
                <td>{{ entity.pages }}</td>
            </tr>
            <tr>
                <th>Edition</th>
                <td>{{ entity.edition }}</td>
            </tr>
            <tr>
                <th>Keywords</th>
                <td>{{ entity.keywords }}</td>
            </tr>
            <tr>
                <th>Doi</th>
                <td>{{ entity.doi }}</td>
            </tr>
            <tr>
                <th>Approvedflag</th>
                <td>{{ entity.approvedFlag }}</td>
            </tr>
            <tr>
                <th>Isn</th>
                <td>{{ entity.ISN }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('publication') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('publication_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('publication_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
