{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Publication list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Year</th>
                <th>Volume</th>
                <th>Number</th>
                <th>Pages</th>
                <th>Edition</th>
                <th>Keywords</th>
                <th>Doi</th>
                <th>Approvedflag</th>
                <th>Isn</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('publication_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{% if entity.year %}{{ entity.year|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.volume }}</td>
                <td>{{ entity.number }}</td>
                <td>{{ entity.pages }}</td>
                <td>{{ entity.edition }}</td>
                <td>{{ entity.keywords }}</td>
                <td>{{ entity.doi }}</td>
                <td>{{ entity.approvedFlag }}</td>
                <td>{{ entity.ISN }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('publication_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('publication_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('publication_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
